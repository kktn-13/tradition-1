{%- comment -%}
  Customer Addresses Page
{%- endcomment -%}

<section class="py-10 sm:py-14 lg:py-20">
  <div class="max-w-screen-md mx-auto px-4 sm:px-6 lg:px-8">

    <div class="mb-6">
      <a href="{{ routes.account_url }}" class="inline-flex items-center text-xs text-kameya-deep-red font-serif-en tracking-[0.1em] uppercase hover:text-kameya-dark transition-colors group">
        <svg class="w-4 h-4 mr-1.5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
        </svg>
        Back to Account
      </a>
    </div>

    <h1 class="font-serif-en text-3xl font-light text-kameya-dark tracking-wide text-center mb-8">
      Your Addresses
    </h1>
    <div class="flex justify-center mb-10">
      <div class="w-12 h-px bg-kameya-muted-gold"></div>
    </div>

    {%- comment -%} Add New Address Form {%- endcomment -%}
    <div class="mb-10">
      <button
        type="button"
        class="w-full border border-dashed border-kameya-light-gray text-kameya-warm-gray px-6 py-4 font-serif-en text-xs tracking-[0.15em] uppercase hover:border-kameya-dark hover:text-kameya-dark transition-colors"
        onclick="document.getElementById('new-address-form').classList.toggle('hidden')"
      >
        + Add New Address
      </button>

      <div id="new-address-form" class="hidden mt-4 p-6 border border-kameya-light-gray/50">
        {%- form 'customer_address', customer.new_address -%}
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">First Name</label>
              <input type="text" name="address[first_name]" autocomplete="given-name" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div>
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Last Name</label>
              <input type="text" name="address[last_name]" autocomplete="family-name" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div class="sm:col-span-2">
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Company (Optional)</label>
              <input type="text" name="address[company]" autocomplete="organization" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div class="sm:col-span-2">
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Address</label>
              <input type="text" name="address[address1]" autocomplete="address-line1" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div class="sm:col-span-2">
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Apartment, suite, etc. (Optional)</label>
              <input type="text" name="address[address2]" autocomplete="address-line2" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div>
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">City</label>
              <input type="text" name="address[city]" autocomplete="address-level2" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div>
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Country</label>
              <select name="address[country]" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
                {{ all_country_option_tags }}
              </select>
            </div>
            <div>
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Province / State</label>
              <input type="text" name="address[province]" autocomplete="address-level1" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div>
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Postal / ZIP Code</label>
              <input type="text" name="address[zip]" autocomplete="postal-code" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div>
              <label class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Phone</label>
              <input type="tel" name="address[phone]" autocomplete="tel" class="w-full border border-kameya-light-gray px-4 py-2.5 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors">
            </div>
            <div class="flex items-center">
              <input type="checkbox" name="address[default]" id="address-default" value="1" class="mr-2">
              <label for="address-default" class="text-xs text-kameya-warm-gray font-sans">Set as default address</label>
            </div>
          </div>
          <div class="mt-5 flex space-x-3">
            <button type="submit" class="px-8 py-2.5 bg-kameya-dark text-white font-serif-en text-xs tracking-[0.15em] uppercase hover:bg-kameya-charcoal transition-colors">
              Save Address
            </button>
            <button
              type="button"
              class="px-6 py-2.5 border border-kameya-light-gray text-kameya-warm-gray font-serif-en text-xs tracking-[0.15em] uppercase hover:border-kameya-dark hover:text-kameya-dark transition-colors"
              onclick="document.getElementById('new-address-form').classList.add('hidden')"
            >
              Cancel
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>

    {%- comment -%} Existing Addresses {%- endcomment -%}
    {%- if customer.addresses.size > 0 -%}
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {%- for address in customer.addresses -%}
          <div class="p-5 border border-kameya-light-gray/50">
            {%- if address == customer.default_address -%}
              <span class="inline-block text-[10px] tracking-[0.15em] uppercase text-kameya-muted-gold font-serif-en mb-2">Default</span>
            {%- endif -%}
            <div class="text-sm text-kameya-dark font-sans leading-relaxed">
              {{ address | format_address }}
            </div>
            <div class="mt-4 flex space-x-4">
              <a href="{{ address.url }}" class="text-xs text-kameya-deep-red font-sans hover:underline">Edit</a>
              <button
                type="button"
                class="text-xs text-kameya-warm-gray font-sans hover:text-kameya-deep-red transition-colors"
                onclick="if(confirm('Remove this address?')){Shopify.postLink('{{ address.url }}',{parameters:{_method:'delete'}})}"
              >
                Delete
              </button>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Customer Addresses",
  "tag": "section",
  "class": "main-addresses",
  "settings": []
}
{% endschema %}
