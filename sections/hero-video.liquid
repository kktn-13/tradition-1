{%- comment -%}
  Hero Video Section
  Full-screen video background with overlay catchcopy.
  Designed for the top page of Kameya Japan Tradition.
{%- endcomment -%}

{%- liquid
  assign heading       = section.settings.heading
  assign subheading    = section.settings.subheading
  assign video_url     = section.settings.video_url
  assign video_hosted  = section.settings.video_hosted
  assign poster_image  = section.settings.poster_image
  assign overlay_opacity = section.settings.overlay_opacity
  assign cta_text      = section.settings.cta_text
  assign cta_link      = section.settings.cta_link
  assign text_alignment = section.settings.text_alignment
-%}

<section
  id="hero-video-{{ section.id }}"
  class="hero-video relative w-full overflow-hidden"
  style="height: {{ section.settings.section_height }}vh;"
>
  {%- comment -%} Video Background {%- endcomment -%}
  <div class="absolute inset-0 w-full h-full">
    {%- if video_hosted != blank -%}
      {{
        video_hosted
        | video_tag:
          autoplay: true,
          loop: true,
          muted: true,
          playsinline: true,
          class: 'absolute inset-0 w-full h-full object-cover',
          image_size: '2048x'
      }}
    {%- elsif video_url != blank -%}
      {%- if video_url contains 'youtube' or video_url contains 'youtu.be' -%}
        {%- assign youtube_id = video_url | split: 'v=' | last | split: '&' | first -%}
        {%- if youtube_id == video_url -%}
          {%- assign youtube_id = video_url | split: 'youtu.be/' | last | split: '?' | first -%}
        {%- endif -%}
        <iframe
          src="https://www.youtube-nocookie.com/embed/{{ youtube_id }}?autoplay=1&mute=1&loop=1&playlist={{ youtube_id }}&controls=0&showinfo=0&rel=0&modestbranding=1&playsinline=1"
          class="absolute inset-0 w-full h-full object-cover pointer-events-none"
          style="transform: scale(1.2);"
          frameborder="0"
          allow="autoplay; encrypted-media"
          loading="lazy"
          title="{{ heading | default: 'Hero video' }}"
        ></iframe>
      {%- elsif video_url contains 'vimeo' -%}
        {%- assign vimeo_id = video_url | split: 'vimeo.com/' | last | split: '?' | first -%}
        <iframe
          src="https://player.vimeo.com/video/{{ vimeo_id }}?autoplay=1&muted=1&loop=1&background=1&byline=0&title=0"
          class="absolute inset-0 w-full h-full object-cover pointer-events-none"
          style="transform: scale(1.2);"
          frameborder="0"
          allow="autoplay"
          loading="lazy"
          title="{{ heading | default: 'Hero video' }}"
        ></iframe>
      {%- endif -%}
    {%- elsif poster_image != blank -%}
      <img
        src="{{ poster_image | image_url: width: 2048 }}"
        alt="{{ poster_image.alt | default: heading }}"
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      >
    {%- else -%}
      {%- comment -%} Placeholder gradient when no media is set {%- endcomment -%}
      <div class="absolute inset-0 w-full h-full bg-gradient-to-br from-kameya-charcoal via-kameya-dark to-kameya-charcoal"></div>
    {%- endif -%}
  </div>

  {%- comment -%} Overlay {%- endcomment -%}
  <div
    class="absolute inset-0 bg-kameya-dark"
    style="opacity: {{ overlay_opacity | divided_by: 100.0 }};"
  ></div>

  {%- comment -%} Content Overlay {%- endcomment -%}
  <div class="relative z-10 h-full flex items-center justify-center px-6 sm:px-8 lg:px-12">
    <div class="max-w-4xl mx-auto text-{{ text_alignment }}">

      {%- if subheading != blank -%}
        <p class="hero-video__subheading font-serif-en text-sm sm:text-base tracking-[0.3em] uppercase text-kameya-muted-gold mb-4 sm:mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 0.3s;">
          {{ subheading }}
        </p>
      {%- endif -%}

      {%- if heading != blank -%}
        <h1 class="hero-video__heading font-serif-en text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-light leading-tight text-white opacity-0 animate-fade-in-up" style="animation-delay: 0.6s;">
          {{ heading }}
        </h1>
      {%- endif -%}

      {%- comment -%} Decorative Line {%- endcomment -%}
      <div class="mt-6 sm:mt-8 flex {{ text_alignment | replace: 'left', 'justify-start' | replace: 'center', 'justify-center' | replace: 'right', 'justify-end' }} opacity-0 animate-fade-in-up" style="animation-delay: 0.9s;">
        <div class="w-16 sm:w-24 h-px bg-kameya-muted-gold"></div>
      </div>

      {%- if cta_text != blank and cta_link != blank -%}
        <div class="mt-8 sm:mt-10 opacity-0 animate-fade-in-up" style="animation-delay: 1.2s;">
          <a
            href="{{ cta_link }}"
            class="inline-block border border-white/40 text-white px-8 py-3 sm:px-10 sm:py-4 font-serif-en text-xs sm:text-sm tracking-[0.2em] uppercase hover:bg-white hover:text-kameya-dark transition-all duration-500"
          >
            {{ cta_text }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Scroll Indicator {%- endcomment -%}
  {%- if section.settings.show_scroll_indicator -%}
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 opacity-0 animate-fade-in-up" style="animation-delay: 1.8s;">
      <div class="flex flex-col items-center text-white/50">
        <span class="text-[10px] tracking-[0.3em] uppercase mb-3 font-sans">Scroll</span>
        <div class="w-px h-10 bg-white/30 relative overflow-hidden">
          <div class="w-full h-1/2 bg-white/80 animate-scroll-line"></div>
        </div>
      </div>
    </div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Hero Video",
  "tag": "section",
  "class": "hero-video-section",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "video",
      "id": "video_hosted",
      "label": "Hosted Video",
      "info": "Upload a video directly to Shopify. Recommended for best performance."
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (YouTube / Vimeo)",
      "info": "Used as fallback if no hosted video is uploaded."
    },
    {
      "type": "image_picker",
      "id": "poster_image",
      "label": "Poster / Fallback Image",
      "info": "Displayed while the video loads or as fallback on mobile."
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The heart of harmony, Melody that echoes through the earth"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Kameya Japan Tradition"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 100,
      "unit": "vh",
      "label": "Section Height"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "default": 40,
      "unit": "%",
      "label": "Overlay Darkness"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "default": "center",
      "options": [
        { "value": "left",   "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right",  "label": "Right" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Video",
      "category": "Hero"
    }
  ]
}
{% endschema %}
