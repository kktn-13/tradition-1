{%- comment -%}
  Password Page Section
  Displayed when the store is password-protected.
{%- endcomment -%}

<section class="min-h-screen flex items-center justify-center bg-kameya-dark px-4">
  <div class="max-w-md w-full text-center">
    <span class="font-serif-en text-2xl font-semibold text-white tracking-wide block mb-8">
      {{ shop.name }}
    </span>

    <h1 class="font-serif-en text-xl text-kameya-cream/80 font-light mb-3">
      Opening Soon
    </h1>
    <p class="text-sm text-kameya-cream/50 font-sans mb-8 leading-relaxed">
      We are preparing something extraordinary. Enter the password below for early access.
    </p>

    {%- form 'storefront_password' -%}
      {%- if form.errors -%}
        <div class="mb-4 text-sm text-kameya-urushi-red font-sans">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div class="flex border border-kameya-cream/20">
        <input
          type="password"
          name="password"
          placeholder="Password"
          class="flex-1 px-4 py-3 bg-transparent text-white text-sm font-sans placeholder-kameya-cream/30 focus:outline-none"
          aria-label="Password"
        >
        <button
          type="submit"
          class="px-6 py-3 bg-kameya-muted-gold text-kameya-dark font-serif-en text-xs tracking-[0.15em] uppercase hover:bg-kameya-gold transition-colors"
        >
          Enter
        </button>
      </div>
    {%- endform -%}

    <p class="mt-8 text-xs text-kameya-cream/30 font-sans">
      Are you the store owner? <a href="/admin" class="underline hover:text-white transition-colors">Log in</a>
    </p>
  </div>
</section>

{% schema %}
{
  "name": "Password Page",
  "tag": "section",
  "class": "main-password",
  "settings": []
}
{% endschema %}
