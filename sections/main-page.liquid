{%- comment -%}
  Main Page Section
  Renders standard Shopify page content.
{%- endcomment -%}

<section class="py-10 sm:py-14 lg:py-20">
  <div class="max-w-screen-md mx-auto px-4 sm:px-6 lg:px-8">

    <h1 class="font-serif-en text-3xl sm:text-4xl font-light text-kameya-dark tracking-wide text-center mb-8">
      {{ page.title }}
    </h1>
    <div class="flex justify-center mb-10">
      <div class="w-12 h-px bg-kameya-muted-gold"></div>
    </div>

    <div class="prose prose-sm sm:prose max-w-none text-kameya-dark/80 leading-relaxed font-sans">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Content",
  "tag": "section",
  "class": "main-page",
  "settings": []
}
{% endschema %}
