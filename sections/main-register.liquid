{%- comment -%}
  Customer Registration Page
{%- endcomment -%}

<section class="py-10 sm:py-14 lg:py-20">
  <div class="max-w-sm mx-auto px-4 sm:px-6">

    <h1 class="font-serif-en text-3xl font-light text-kameya-dark tracking-wide text-center mb-8">
      Create Account
    </h1>
    <div class="flex justify-center mb-8">
      <div class="w-12 h-px bg-kameya-muted-gold"></div>
    </div>

    {%- form 'create_customer' -%}
      {%- if form.errors -%}
        <div class="mb-6 p-3 border border-kameya-urushi-red/30 bg-kameya-urushi-red/5 text-sm text-kameya-deep-red font-sans">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div class="space-y-4">
        <div>
          <label for="register-first-name" class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">First Name</label>
          <input
            type="text"
            id="register-first-name"
            name="customer[first_name]"
            autocomplete="given-name"
            class="w-full border border-kameya-light-gray px-4 py-3 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors"
          >
        </div>
        <div>
          <label for="register-last-name" class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Last Name</label>
          <input
            type="text"
            id="register-last-name"
            name="customer[last_name]"
            autocomplete="family-name"
            class="w-full border border-kameya-light-gray px-4 py-3 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors"
          >
        </div>
        <div>
          <label for="register-email" class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Email</label>
          <input
            type="email"
            id="register-email"
            name="customer[email]"
            autocomplete="email"
            class="w-full border border-kameya-light-gray px-4 py-3 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors"
          >
        </div>
        <div>
          <label for="register-password" class="block text-xs tracking-[0.1em] uppercase text-kameya-warm-gray mb-1.5 font-sans">Password</label>
          <input
            type="password"
            id="register-password"
            name="customer[password]"
            autocomplete="new-password"
            class="w-full border border-kameya-light-gray px-4 py-3 text-sm font-sans text-kameya-dark bg-transparent focus:outline-none focus:border-kameya-dark transition-colors"
          >
        </div>
      </div>

      <button
        type="submit"
        class="w-full mt-6 flex items-center justify-center px-8 py-3.5 bg-kameya-dark text-white font-serif-en text-xs tracking-[0.2em] uppercase hover:bg-kameya-charcoal transition-colors"
      >
        Create Account
      </button>

      <div class="mt-6 text-center">
        <a href="{{ routes.account_login_url }}" class="text-xs text-kameya-warm-gray font-sans hover:text-kameya-dark transition-colors">
          Already have an account? Sign in
        </a>
      </div>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Customer Register",
  "tag": "section",
  "class": "main-register",
  "settings": []
}
{% endschema %}
